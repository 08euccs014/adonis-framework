{
  "name": "@adonisjs/core",
  "version": "1.2.4",
  "description": "AdonisJs core package",
  "main": "build/index.js",
  "files": [
    "build/src",
    "build/index.js",
    "build/index.d.ts",
    "build/providers"
  ],
  "scripts": {
    "pretest": "npm run lint",
    "test": "nyc node japaFile.js",
    "lint": "tslint --project tsconfig.json",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "http",
    "http-server",
    "adonisjs"
  ],
  "author": "virk",
  "homepage": "https://adonisjs.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/adonisjs/adonis-framework/tree/master/packages/core"
  },
  "license": "MIT",
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/adonis-framework/issues"
  },
  "dependencies": {
    "@adonisjs/fold": "^5.0.2",
    "@adonisjs/request": "^1.1.6",
    "@adonisjs/response": "^1.1.7",
    "@adonisjs/router": "^1.5.0",
    "@adonisjs/server": "^1.2.1",
    "@adonisjs/utils": "^1.3.0",
    "dotenv": "^6.2.0",
    "lodash": "^4.17.11",
    "require-all": "^3.0.0"
  },
  "devDependencies": {
    "clear-module": "^3.1.0",
    "fs-extra": "^7.0.1",
    "supertest": "^3.4.2"
  }
}
