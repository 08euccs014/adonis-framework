{
  "name": "@adonisjs/core",
  "version": "1.5.0",
  "description": "AdonisJs core package",
  "main": "build/index.js",
  "files": [
    "build/config",
    "build/src",
    "build/index.js",
    "build/index.d.ts",
    "build/providers"
  ],
  "scripts": {
    "pretest": "npm run lint",
    "test": "nyc node japaFile.js",
    "lint": "tslint --project tsconfig.json",
    "clean": "del build",
    "doc": "typedoc",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "http",
    "http-server",
    "adonisjs"
  ],
  "author": "virk",
  "homepage": "https://adonisjs.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/adonisjs/adonis-framework/tree/master/packages/core"
  },
  "license": "MIT",
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/adonis-framework/issues"
  },
  "dependencies": {
    "@adonisjs/bodyparser": "^2.1.2",
    "@adonisjs/fold": "^5.0.5",
    "@adonisjs/profiler": "^1.1.4",
    "@adonisjs/request": "^1.1.9",
    "@adonisjs/response": "^1.1.10",
    "@adonisjs/router": "^1.5.4",
    "@adonisjs/server": "^1.3.0",
    "@adonisjs/utils": "^1.4.0",
    "dotenv": "^6.2.0",
    "lodash": "^4.17.11",
    "pino": "^5.11.1"
  },
  "devDependencies": {
    "@adonisjs/dev-utils": "^1.1.0",
    "split2": "^3.1.0",
    "supertest": "^3.4.2"
  }
}
