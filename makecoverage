const path = require('path')
const exec = require('child_process').exec

const coverage = path.normalize('./node_modules/istanbul/lib/cli.js') + ' cover ' + path.normalize('./node_modules/.bin/_mocha') + ' ' + path.normalize('test/integration/basic-server.spec.js') + ' ' + path.normalize('test/unit') + ' --colors'

exec(coverage,function(error, stdout, stderr){
  if(error){
    console.log(error.stack)
    process.exit(1)
  }
  console.log(stdout)
  process.exit(0)
})
