{
  "name": "@adonisjs/framework",
  "version": "5.0.12",
  "description": "Adonis framework makes it easy for you to write webapps with less code",
  "main": "index.js",
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "nyc node japaFile.js",
    "prepublishOnly": "npm run build",
    "lint": "tslint --project tsconfig.json",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && typedoc",
    "coverage:html": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "commit": "git-cz"
  },
  "standard": {
    "global": [
      "use"
    ]
  },
  "keywords": [
    "adonis-framework",
    "mvc",
    "mvc-framework"
  ],
  "author": "virk",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/mrm-preset": "^1.0.14",
    "@types/dotenv": "^6.1.0",
    "@types/node": "^10.12.10",
    "clear-require": "^3.0.0",
    "commitizen": "^3.0.5",
    "coveralls": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "del-cli": "^1.1.0",
    "japa": "^2.0.6",
    "mrm": "^1.2.1",
    "nyc": "^13.1.0",
    "pkg-ok": "^2.3.1",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.13.0",
    "typedoc-plugin-external-module-name": "^1.1.3",
    "typedoc-plugin-single-line-tags": "^1.0.0",
    "typescript": "^3.1.6",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "@adonisjs/fold": "file:../adonis-fold",
    "@adonisjs/generic-exceptions": "^3.0.1",
    "accepts": "^1.3.5",
    "content-disposition": "^0.5.2",
    "destroy": "^1.0.4",
    "dotenv": "^6.1.0",
    "dotenv-expand": "^4.2.0",
    "etag": "^1.8.1",
    "fresh": "^0.5.2",
    "fs-extra": "^7.0.1",
    "http-status-codes": "^1.3.0",
    "lodash": "^4.17.11",
    "macroable": "^2.0.0",
    "matchit": "file:../matchit",
    "mime-types": "^2.1.21",
    "on-finished": "^2.3.0",
    "proxy-addr": "^2.0.4",
    "qs": "^6.6.0",
    "require-all": "^3.0.0",
    "simple-encryptor": "^2.0.0",
    "type-is": "^1.6.16",
    "uniqid": "^5.0.3",
    "vary": "^1.1.2"
  },
  "nyc": {
    "include": [
      "src",
      "lib"
    ],
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/adonis-framework.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/adonis-framework/issues"
  },
  "homepage": "https://github.com/adonisjs/adonis-framework#readme",
  "gitHooks": {
    "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
  }
}
