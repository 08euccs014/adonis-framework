{
  "name": "adonis-fold",
  "version": "4.0.0-alpha",
  "description": "Dependency manager and ioc container for your next NodeJs application",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test:local": "npm run lint && node bin/tasks test:local",
    "test:win": "npm run lint && node bin/tasks test:win",
    "coverage": "npm run lint && node bin/tasks coverage",
    "test": "npm run lint && node bin/tasks test",
    "lint": "standard"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "before",
      "use",
      "make"
    ],
    "ignore": [
      "**/out/"
    ]
  },
  "author": "adonisjs",
  "license": "MIT",
  "devDependencies": {
    "coveralls": "^2.11.4",
    "cz-conventional-changelog": "^1.1.5",
    "istanbul": "^0.4.5",
    "japa": "^1.0.0",
    "require-all": "^2.1.0",
    "shelljs": "^0.7.6",
    "standard": "^8.6.0",
    "ygor": "^4.0.1"
  },
  "dependencies": {
    "caller": "^1.0.1",
    "debug": "^2.6.0",
    "lodash": "^4.17.4",
    "node-exceptions": "^1.0.3",
    "require-stack": "^1.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poppinss/adonis-fold.git"
  },
  "keywords": [
    "ioc",
    "dependency",
    "injection",
    "service",
    "provider",
    "autoloading"
  ],
  "bugs": {
    "url": "https://github.com/poppinss/adonis-fold/issues"
  },
  "homepage": "https://github.com/poppinss/adonis-fold#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
