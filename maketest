const path = require('path')
const exec = require('child_process').exec

const tests = path.normalize('./node_modules/mocha/bin/mocha') + ' ' + path.normalize('test/integration/basic-server.spec.js') + ' ' + path.normalize('test/unit') + ' --colors'

exec(tests,function(error, stdout, stderr){
  if(error){
    console.log(error.stack)
    process.exit(1)
  }
  console.log(stdout)
  process.exit(0)
})
